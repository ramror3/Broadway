<h1 class="current-category"><%= params[:category] %></h1>

<% if @plays.count == 0 %>
<% raise "#{@plays.count}*********" %>
  <h3>There are no plays for this category</h3>
  <% else %>
    <% @plays.each do |play| %>
      <h2><%= link_to play.title, play_path(play) %></h2>
  <% end %>
<% end %>

